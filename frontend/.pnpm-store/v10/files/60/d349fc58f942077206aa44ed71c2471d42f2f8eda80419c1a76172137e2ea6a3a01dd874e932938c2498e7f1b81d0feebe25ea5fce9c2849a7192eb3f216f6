  return (target, propertyKey) => {
    const self = target.$self();
    self.setRegistry(propertyKey, () => {
      const attr = self.number(value);
      if (options.notNullable) {
        attr.notNullable();
      }
      return attr;
    });
  };
}

function Bool(value, options = {}) {
  return (target, propertyKey) => {
    const self = target.$self();
    self.setRegistry(propertyKey, () => {
      const attr = self.boolean(value);
      if (options.notNullable) {
        attr.notNullable();
      }
      return attr;
    });
