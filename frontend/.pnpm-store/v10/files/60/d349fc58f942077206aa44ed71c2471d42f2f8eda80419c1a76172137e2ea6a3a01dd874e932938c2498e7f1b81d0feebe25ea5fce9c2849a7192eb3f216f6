function Attr(value) {
  return (target, propertyKey) => {
    const self = target.$self();
    self.setRegistry(propertyKey, () => self.attr(value));
  };
}

function Str(value, options = {}) {
  return (target, propertyKey) => {
    const self = target.$self();
    self.setRegistry(propertyKey, () => {
      const attr = self.string(value);
      if (options.notNullable) {
        attr.notNullable();
      }
      return attr;
    });
  };
}

